<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.up_vams.userSchool.dao.UserSchoolMapper">
    <resultMap id="userSchoolMap" type="UserSchool">
        <id column="school_id" property="schoolId"/>
        <id column="user_id" property="userId"/>
        <result column="coll_time" property="collTime"/>
        <result column="state" property="usState"/>
    </resultMap>

    <!--用户点收藏后插入一条数据-->
    <insert id="insert" parameterType="UserSchool">
        INSERT INTO t_r_user_school(school_id,user_id,coll_time,state) VALUES (#{schoolId},#{userId},NOW(),#{usState})

    </insert>

   <!-- 取消收藏后，修改记录-->
   <update  id="update" parameterType="UserSchool">
       UPDATE t_r_user_school SET state=#{usState},vote_time=NOW() WHERE schoolId=#{schoolId} AND user_id=#{userId}

   </update>

    <!--分页获取用户收藏照片-->
    <select id="selectPageList" parameterType="page" resultMap="userSchoolMap">
        SELECT schoolId FROM t_r_user_school WHERE user_id=#{id} LIMIT #{start},#{pageSize}
    </select>

   <!-- 通过联合主键查询实体-->
    <select id="select" parameterType="UserSchool" resultMap="userSchoolMap">
        SELECT school_id,user_id,coll_time,state FROM t_r_user_school WHERE photo_id=#{schoolId} AND user_id=#{userId}

    </select>

    <!--通过用户ID查询用户所收藏的所有学校-->
    <select id="selectTotalRecord" parameterType="string" resultType="long">
        SELECT count(user_id) FROM t_r_user_school WHERE user_id=#{userId}
    </select>

</mapper>